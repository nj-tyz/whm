.msg-item {
  width: 100%;
  height: 120rpx;
  border-bottom: 1rpx solid rgb(233, 233, 233);
  position: relative;
  left:0;
  top:0;
  overflow: hidden;
}

.msg {
  position: absolute;
  width: 100%;
  height: 120rpx;
  left:0;
  top:0;
  z-index: 100;
  background-color: #FFF;
}

.header-img {
  position: absolute;
  width: 110rpx;
  height: 110rpx;
  left: 20rpx;
  top: 20rpx;
  border-radius: 10%;
}

.user-name {
  position: absolute;
  left: 70rpx;
  top: 30rpx;
}

.msg-img {
  position: absolute;
  right: 70rpx;
  top: 30rpx;
  margin: 0rpx 10rpx 0rpx 10rpx;
  width: 50rpx;
  height: 50rpx
  
}

.msg-menu {
  position: absolute;
  width: 100%;
  height: 120rpx;
  left:0;
  top:0;
  z-index: 0;
}

.menu-delete {
  position: absolute;
  width: 100rpx;
  height: 118rpx;
  top:1rpx;
  right: 0;
  background-color: rgb(255, 58, 50);
  color:#FFF;
  text-align: center;
  line-height:125rpx;
}

.menu-mark {
  position: absolute;
  width: 100rpx;
  height: 118rpx;
  top:1rpx;
  right: 100rpx;
  background-color: rgb(200, 199, 205);
  color:#FFF;
  text-align: center;
  line-height:125rpx;
}
.menu-mark2 {
  position: absolute;
  width: 150rpx;
  height: 118rpx;
  top:1rpx;
  right: 200rpx;
  background-color: #78c3ea;
  color:#FFF;
  text-align: center;
  line-height:125rpx;
}