<view class="page">
 <view class="weui-cells__title">{{currentLanguage.username}}:</view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__bd">
        <input class="weui-input" value='{{username}}' bindinput="changeInput" placeholder="{{currentLanguage.input_username}}" />
        <view class="weui-icon-clear2" wx:if="true" bindtap="clearInput">
            <icon type="clear" size="14"></icon>
        </view>
      </view>
    </view>
  </view>
  <view class="button-sp-area">
      
      <button class="weui-btn mini-btn" type="primary" bindtap="modifyUsername" size="mini">{{currentLanguage.submit}}</button>
      
  </view>
  

    
</view>